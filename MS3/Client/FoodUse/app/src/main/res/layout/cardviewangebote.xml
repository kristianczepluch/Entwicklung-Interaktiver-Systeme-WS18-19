<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:layout_width="368dp"
        android:layout_height="76dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        app:cardBackgroundColor="@color/hell_grau"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016">

        <RelativeLayout
            android:id="@+id/relativlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/angebote_image"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/angebot_entfernung"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="-11dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/example_image_angebote" />

            <TextView
                android:id="@+id/angebot_titel"
                android:layout_width="196dp"
                android:layout_height="21dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="93dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="79dp"
                android:layout_marginBottom="45dp"
                android:text="Titel" />

            <TextView
                android:id="@+id/angebot_entfernung"
                android:layout_width="100dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="119dp"
                android:layout_marginTop="49dp"
                android:layout_marginEnd="149dp"
                android:layout_marginBottom="5dp"
                android:text="Entfernung"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Lebensmitteleintrag_img"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="93dp"
                android:layout_marginTop="47dp"
                android:layout_marginEnd="251dp"
                android:layout_marginBottom="6dp"
                app:srcCompat="@drawable/ic_location_on_black_24dp" />

            <ImageView
                android:id="@+id/circle_image_abholwert"
                android:layout_width="74dp"
                android:layout_height="53dp"
                android:layout_alignStart="@+id/angebote_image"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="279dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/abholwert_circle" />

            <TextView
                android:id="@+id/abholwert_pkt_textView"
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="300dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="11dp"
                android:text="1 Pkt" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>